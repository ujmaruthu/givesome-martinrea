{%- from "shuup/front/macros/product.jinja" import product_box with context -%}

<section class="givesome-carousel project-carousel-plugin">
    {% if title %}
        <div class="carousel-text">
            <h2>{{ title }}</h2>
        </div>
    {% endif %}

    <div class="owl-loading-indicator">
        <i class="fa fa-spin fa-spinner text-muted fa-2x"></i>
    </div>

    <div class="project-carousel owl-carousel">
        {% for product in products if shuup.product.is_visible(product) %}
            {{ product_box(product) }}
        {% endfor %}
    </div>
</section>
