{% extends "shuup/admin/base.jinja" %}
{% from "shuup/admin/macros/general.jinja" import content_block, content_with_sidebar %}
{% from "shuup/admin/macros/multilanguage.jinja" import language_dependent_content_tabs %}

{% block title %}Order {{ givesome_order.id }}{% endblock %}

{% block body_class %}shuup-details{% endblock %}

{% block content %}
        <form method="post">{% csrf_token %}
            <table class="table table-hover">
              <thead>
                <tr>
                  <th scope="col">#</th>
                  <th scope="col">Date</th>
                  <th scope="col">User</th>
                  <th scope="col">Payment Method</th>
                  <th scope="col">Product</th>
                  <th scope="col">Value</th>
                  <th scope="col"></th>
                </tr>
              </thead>
              <tbody>
                    <tr>
                        <td>{{ givesome_order.id }}</td>
                        <td>{{ givesome_order.order_date }}</td>
                        <td>{{ givesome_order.email }}</td>
                        <td>{{ givesome_order.payment_method_name }}</td>
                        <td>{{ givesome_order.product }}</td>
                        <td>{{ givesome_order.taxful_total_price_value }}</td>
                        <td><a class="btn btn-outline-danger" href="/admin/manage_orders/delete/{{ givesome_order.id }}">Delete</a></td>
                    </tr>
              </tbody>
            </table>
        </form>
{% endblock %}
